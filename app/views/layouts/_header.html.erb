<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Time Capsule", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "HOME",   root_path, id: "nav_element" %></li>
        <li><%= link_to "ABOUT",   about_path, id: "nav_element" %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Profile', user_path(current_user.id), id: "nav_element" %></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path, id: "nav_element" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, id: "nav_element" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "SIGN UP", new_user_registration_path, id: "nav_element" %></li>
          <li><%= link_to "LOGIN", new_user_session_path, id: "nav_element" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>