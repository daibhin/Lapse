<% provide(:title, @user.email) %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
  	<h2 style="font-size:40px" class="home">My Snippets</h2>
    <% if @user.snippets.any? %>
      <% @snippets.each do |snippet| %>
        <ol class="snippets">
          <%= render snippet %>
        </ol>
      <% end %>
      <%= will_paginate @snippets %>
    <% end %>
  </div>
</div>

